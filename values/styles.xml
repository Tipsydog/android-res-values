<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->

    <style name="voice_pkg_progress_bar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/voice_pkg_progress_drawable</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">@dimen/voice_pkg_progress_bar_bg_height</item>
        <item name="android:maxHeight">@dimen/voice_pkg_progress_bar_bg_height</item>
        <item name="android:minWidth">@dimen/voice_pkg_progress_bar_bg_width</item>
        <item name="android:maxWidth">@dimen/voice_pkg_progress_bar_bg_width</item>
    </style>

    <style name="rr_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
